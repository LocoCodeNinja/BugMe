<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="team13.bugme.entity.BugsEntity">
        <table name="bugs" schema="dbo" catalog="bugMe"/>
        <attributes>
            <id name="id">
                <column name="id" precision="-1"/>
            </id>
            <basic name="title">
                <column name="title" length="50"/>
            </basic>
            <basic name="description">
                <column name="description" length="50"/>
            </basic>
            <basic name="priority">
                <column name="priority" precision="-1"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
